<NodeEditor>:
    do_scroll: (True, True)
    scroll_type: ["bars", "content"]
    bar_width: 10
    on_scroll_x: self.generateGrid()
    on_scroll_y: self.generateGrid()
    canvas:
        #canvas operations essentially result in a darkened background compared to the parent wisget
        Color:
            rgba: (0, 0, 0, 0.5)
        Rectangle:
            pos: (self.x, self.y)
            size:(self.width, self.height)
    FloatLayout:
        #FloatLayout that will contain all nodes as children
        x: self.parent.x
        y: self.parent.y
        size_hint: (None, None)
        size: (self.parent.width * self.parent.scale, self.parent.height * self.parent.scale)
        #size adapts to Zoom level
        Widget:
            x: self.parent.x
            y: self.parent.y
            size_hint: (1, 1)

<Node>:
    padding: 10
    spacing: 10
    orientation: "vertical"
    size_hint: (None, None)
