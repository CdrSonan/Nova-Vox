#set background images matching the UI theme for all managed button types

<ManagedSpinnerOptn>:
    background_normal: "assets/UI/Toolbar/Adaptive07full.png"
    background_down: "assets/UI/Toolbar/Adaptive07full.png"
    shorten: True
    text_size: (self.width, 0)
    halign: "center"

<ManagedButton>:
    background_normal: "assets/UI/Toolbar/Adaptive07new.png"
    background_down: "assets/UI/Toolbar/Adaptive07new.png"
    shorten: True
    text_size: (self.width, 0)
    halign: "center"

<ManagedToggleButton>:
    background_normal: "assets/UI/Toolbar/Adaptive07new.png"
    background_down: "assets/UI/Toolbar/Adaptive07new.png"
    shorten: True
    text_size: (self.width, 0)
    halign: "center"

<ManagedSpinner>:
    background_normal: "assets/UI/Toolbar/Adaptive07mod.png"
    background_down: "assets/UI/Toolbar/Adaptive07mod.png"
    option_cls: Factory.get("ManagedSpinnerOptn")
    shorten: True
    text_size: (self.width, 0)
    halign: "center"

<ManagedSplitterStrip>:
    background_normal: "assets/UI/Toolbar/divider.png"
    background_down: "assets/UI/Toolbar/divider.png"
    border: (1, 1, 1, 1)

<ManagedPopup>:
    size_hint: (None, None)
    size: (400, self.ids["content"].height + 50)
    separator_color: app.root.accColor
    ManagedLabel:
        id: content
        text: self.parent.parent.parent.message
        text_size: root.width, None
        size: self.texture_size
        padding_x: 20

<Tooltip>:
    size_hint: None, None
    size: self.texture_size[0]+5, self.texture_size[1]+5
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            size: self.size
            pos: self.pos
