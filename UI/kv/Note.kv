#:kivy 2.0.0

<NotePropertiesLyrics>:
    size_hint: (None, None)
    size: (200, 80)
    pos: (self.reference.x, self.reference.y - 80)if self.reference.width > 200 else (self.reference.x + (self.reference.width / 2) - 100, self.reference.y - 80)
    orientation: 'vertical'
    arrow_pos: "top_left"
    BubbleButton:
        text: "change to phoneme mode"
    BubbleButton:
        text: "delete"

<NotePropertiesPhonemes>:
    size_hint: (None, None)
    size: (200, 80)
    pos: (self.reference.x, self.reference.y - 80)if self.reference.width > 200 else (self.reference.x + (self.reference.width / 2) - 100, self.reference.y - 80)
    orientation: 'vertical'
    arrow_pos: "top_mid"
    BubbleButton:
        text: "change to lyrics mode"
    BubbleButton:
        text: "delete"

<Note>:
    size_hint: (None, None)
    group: "Notes"
    border: (3, 3, 3, 3)
    TextInput:
        pos: self.parent.x, self.parent.y + (self.parent.height / 2) - 10
        size: self.parent.width, 20
        multiline: False
        background_color: (0, 0, 0, 0)