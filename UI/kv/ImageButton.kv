#set background images matching the UI theme for all managed button types

<ManagedSpinnerOptn>:
    background_normal: "UI/assets/Toolbar/Adaptive07full.png"
    background_down: "UI/assets/Toolbar/Adaptive07full.png"

<ManagedButton>:
    background_normal: "UI/assets/Toolbar/Adaptive07new.png"
    background_down: "UI/assets/Toolbar/Adaptive07new.png"
    shorten: True
    font_size: 15 * (1 + app.root.uiScale) / 2
    text_size: (self.width, 0)

<ManagedToggleButton>:
    background_normal: "UI/assets/Toolbar/Adaptive07new.png"
    background_down: "UI/assets/Toolbar/Adaptive07new.png"
    shorten: True
    font_size: 15 * (1 + app.root.uiScale) / 2
    text_size: (self.width, 0)

<ManagedSpinner>:
    background_normal: "UI/assets/Toolbar/Adaptive07mod.png"
    background_down: "UI/assets/Toolbar/Adaptive07mod.png"
    option_cls: Factory.get("ManagedSpinnerOptn")

<ManagedSplitterStrip>:
    background_normal: "UI/assets/Toolbar/divider.png"
    background_down: "UI/assets/Toolbar/divider.png"
    border: (1, 1, 1, 1)
