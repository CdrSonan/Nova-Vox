<SettingsSidePanel>:
    size_hint: (0.4, 1 - (50 / root.height))
    pos_hint: {"x": 0.6 - (25 / root.width), "y": 0}
    background_color: [0.137, 0.125, 0.173, 0.5]
    overlay_color: [0, 0, 0, 0]
    on_open: self.readSettings()
    GridLayout:
        rows: 5
        orientation: "tb-lr"
        padding: 10
        spacing: 10
        Label:
            size_hint_y: None
            height: 30
            text: "Language:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Label:
            size_hint_y: None
            height: 30
            text: "Accelerator:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Label:
            size_hint_y: None
            height: 30
            text: "Tensor Cores:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Label:
            size_hint_y: None
            height: 30
            text: "pre-rendering:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Label:
            size_hint_y: None
            height: 30
            text: "Logging level:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Spinner:
            id: settings_lang
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: ["en", "jp"]
            on_text: self.parent.parent.writeSettings()
        Spinner:
            id: settings_accel
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: ["CPU", "GPU", "Hybrid"]
            on_text: self.parent.parent.writeSettings()
        Spinner:
            id: settings_tcores
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: ["disabled", "enabled"]
            on_text: self.parent.parent.writeSettings()
        Spinner:
            id: settings_prerender
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: ["disabled", "enabled"]
            on_text: self.parent.parent.writeSettings()
        Spinner:
            id: settings_loglevel
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: ["debug", "info", "warning", "error", "critical"]
            on_text: self.parent.parent.writeSettings()