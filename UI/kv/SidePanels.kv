#:kivy 2.0.0

#:import soundfile soundfile

<ListElement>:
    size_hint_y: None
    height: 30
    on_press: self.parent.parent.parent.parent.detailElement(self.index)

<FileSidePanel>:
    size_hint: (0.4, 1 - (50 / root.height))
    pos_hint: {"x": 0.6 - (25 / root.width), "y": 0}
    background_color: [0.137, 0.125, 0.173, 0.5]
    overlay_color: [0, 0, 0, 0]
    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        ManagedButton:
            size_hint_y: None
            height: 30
            text: "save"
        ManagedButton:
            size_hint_y: None
            height: 30
            text: "load"
        ManagedButton:
            size_hint_y: None
            height: 30
            text: "import"
        ManagedButton:
            size_hint_y: None
            height: 30
            text: "export"
        ManagedButton:
            size_hint_y: None
            height: 30
            text: "render"
            on_press: self.parent.parent.openRenderPopup()

<FileRenderPopup>:
    size_hint: (None, None)
    size: (400, 400)
    title: "render settings"
    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        GridLayout:
            rows: 3
            orientation: "tb-lr"
            padding: 10
            spacing: 10
            Label:
                size_hint_y: None
                height: 30
                text: "format:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                text: "bitdepth:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                text: "sample rate:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Spinner:
                sync_height: True
                text_autoupdate: True
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
                size_hint_y: None
                height: 30
                option_cls: Factory.get("BackdropOptn")
                values: soundfile.available_formats().keys()
                text: "WAV"
                on_text: self.parent.parent.parent.parent.parent.reloadBitdepths(self.text)
            Spinner:
                sync_height: True
                text_autoupdate: True
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
                size_hint_y: None
                height: 30
                option_cls: Factory.get("BackdropOptn")
                values: soundfile.available_subtypes("WAV").keys()
                text: "PCM_24"
                on_text: self.parent.parent.parent.parent.parent.bitdepth = self.text
            Spinner:
                sync_height: True
                text_autoupdate: True
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
                size_hint_y: None
                height: 30
                option_cls: Factory.get("BackdropOptn")
                values: ["44100", "48000", "96000", "192000"]
                text: "48000"
                on_text: self.parent.parent.parent.parent.parent.sampleRate = self.text
        ManagedButton:
            size_hint_y: None
            height: 30
            text: "render"
            on_press: self.parent.parent.parent.parent.finalisingClose()

<SingerSidePanel>:
    size_hint: (0.4, 1 - (50 / root.height))
    pos_hint: {"x": 0.6 - (25 / root.width), "y": 0}
    background_color: [0.137, 0.125, 0.173, 0.5]
    overlay_color: [0, 0, 0, 0]
    on_open: self.listVoicebanks()
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10
        ScrollView:
            do_scroll: (False, True)
            scroll_type: ["bars"]
            bar_width: 10
            BoxLayout:
                id: singers_list
                size_hint_y: None
                orientation: "vertical"
                spacing: 2
        GridLayout:
            size_hint_y: None
            height: self.minimum_height
            rows: 5
            padding: 10
            spacing: 10
            orientation: "tb-lr"
            Label:
                size_hint_y: None
                height: 30
                text: "Name:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 80
                text: "Image:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                text: "Version:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                text: "Description:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                text: "License:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                id: singer_name
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Image:
                size_hint_y: None
                height: 80
                id: singer_image
                source: "UI/assets/TrackList/SingerGrey04.png"
            Label:
                size_hint_y: None
                height: 30
                id: singer_version
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                id: singer_description
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                id: singer_license
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        ManagedButton:
            size_hint_y: None
            height: 30
            text: "import"
            on_press: root.importVoicebank(self.parent.parent.filepaths[self.parent.parent.selectedIndex], self.parent.parent.voicebanks[self.parent.parent.selectedIndex].name, self.parent.parent.voicebanks[self.parent.parent.selectedIndex].image) if (self.parent.parent.selectedIndex != None) else None
        

