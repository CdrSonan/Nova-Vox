<FileSidePanel>:
    size_hint: (0.4, 1 - (50 / root.height))
    pos_hint: {"x": 0.6 - (25 / root.width), "y": 0}
    background_color: [0.137, 0.125, 0.173, 0.5]
    overlay_color: [0, 0, 0, 0]
    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        FileChooserIconView:
            on_selection: text_input.text = self.selection and self.selection[0]
        TextInput:
            size_hint_y: None
            height: 30
            multiline: False
        Button:
            size_hint_y: None
            height: 30
            text: "save"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Button:
            size_hint_y: None
            height: 30
            text: "load"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Button:
            size_hint_y: None
            height: 30
            text: "import"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Button:
            size_hint_y: None
            height: 30
            text: "export"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"

