<ScriptingSidePanel>:
    size_hint: (0.4, 1 - (50 / root.height))
    pos_hint: {"x": 0.6 - (25 / root.width), "y": 0}
    background_color: [0.137, 0.125, 0.173, 0.5]
    overlay_color: [0, 0, 0, 0]
    on_open: self.loadCache()
    on_pre_dismiss: self.saveCache()
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10
        CodeInput:
            id: scripting_editor
        ManagedButton:
            size_hint_y: None
            height: 30
            text: "run"
            on_press: self.parent.parent.runScript()
        ManagedButton:
            size_hint_y: None
            height: 30
            text: "open Devkit"
            on_press: self.parent.parent.openDevkit()

<SettingsSidePanel>:
    size_hint: (0.4, 1 - (50 / root.height))
    pos_hint: {"x": 0.6 - (25 / root.width), "y": 0}
    background_color: [0.137, 0.125, 0.173, 0.5]
    overlay_color: [0, 0, 0, 0]
    on_open: self.readSettings()
    on_pre_dismiss: self.writeSettings()
    GridLayout:
        cols: 2
        orientation: "lr-tb"
        padding: 10
        spacing: 10
        Label:
            size_hint_y: None
            height: 30
            text: "Language:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Spinner:
            id: settings_lang
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: ["en", "jp"]
        Label:
            size_hint_y: None
            height: 30
            text: "Accelerator:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Spinner:
            id: settings_accel
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: ["CPU", "GPU", "Hybrid"]
        Label:
            size_hint_y: None
            height: 30
            text: "Tensor Cores:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Spinner:
            id: settings_tcores
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: ["disabled", "enabled"]
        Label:
            size_hint_y: None
            height: 30
            text: "low-spec mode:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Spinner:
            id: settings_lowSpecMode
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: ["disabled", "enabled"]
        Label:
            size_hint_y: None
            height: 30
            text: "caching mode:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Spinner:
            id: settings_cachingMode
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: ["save RAM", "default", "best rendering speed"]
        Label:
            size_hint_y: None
            height: 30
            text: "audio API:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Spinner:
            id: settings_audioApi
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: self.parent.parent.audioApiNames
            on_text: self.parent.parent.refreshAudioDevices(self.text)
        Label:
            size_hint_y: None
            height: 30
            text: "audio device:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Spinner:
            id: settings_audioDevice
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: self.parent.parent.audioDeviceNames
        Label:
            size_hint_y: None
            height: 30
            text: "Logging level:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Spinner:
            id: settings_loglevel
            sync_height: True
            text_autoupdate: True
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            size_hint_y: None
            height: 30
            option_cls: Factory.get("BackdropOptn")
            values: ["debug", "info", "warning", "error", "critical"]
        Label:
            size_hint_y: None
            height: 30
            text: "Data directory:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        ManagedButton:
            id: settings_datadir
            sync_height: True
            size_hint_y: None
            height: 30
            text: ""
            on_press: self.parent.parent.changeDataDir()
        Label:
            size_hint_y: None
            height: 30
            text: "UI Scale:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Slider:
            id: settings_uiScale
            size_hint_y: None
            height: 30
            min: 0.25
            max: 4.
            step: 0.05
            orientation: 'horizontal'
        Label:
            size_hint_y: None
