#:kivy 2.0.0

<ListElement>:
    size_hint_y: None
    height: 30
    background_normal: "UI/assets/Toolbar/Adaptive09.png"
    background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
    on_press: self.parent.parent.parent.parent.detailElement(self.index)

<FileSidePanel>:
    size_hint: (0.4, 1 - (50 / root.height))
    pos_hint: {"x": 0.6 - (25 / root.width), "y": 0}
    background_color: [0.137, 0.125, 0.173, 0.5]
    overlay_color: [0, 0, 0, 0]
    BoxLayout:
        padding: 10
        spacing: 10
        orientation: "vertical"
        FileChooserIconView:
            on_selection: self.parent.parent.ids["file_input"].text = self.selection and self.selection[0]
        TextInput:
            id: file_input
            size_hint_y: None
            height: 30
            multiline: False
        Button:
            size_hint_y: None
            height: 30
            text: "save"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Button:
            size_hint_y: None
            height: 30
            text: "load"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Button:
            size_hint_y: None
            height: 30
            text: "import"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Button:
            size_hint_y: None
            height: 30
            text: "export"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"

<SingerSidePanel>:
    size_hint: (0.4, 1 - (50 / root.height))
    pos_hint: {"x": 0.6 - (25 / root.width), "y": 0}
    background_color: [0.137, 0.125, 0.173, 0.5]
    overlay_color: [0, 0, 0, 0]
    on_open: self.listVoicebanks()
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10
        ScrollView:
            do_scroll: (False, True)
            scroll_type: ["bars"]
            bar_width: 10
            BoxLayout:
                id: singers_list
                size_hint_y: None
                orientation: "vertical"
        GridLayout:
            size_hint_y: None
            height: self.minimum_height
            rows: 5
            padding: 10
            spacing: 10
            orientation: "tb-lr"
            Label:
                size_hint_y: None
                height: 30
                text: "Name:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 80
                text: "Image:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                text: "Phonemes:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                text: "Version:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                text: "License:"
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                id: singer_name
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Image:
                size_hint_y: None
                height: 80
                id: singer_image
                source: "UI/assets/Toolbar/Adaptive09.png"
            Label:
                size_hint_y: None
                height: 30
                id: singer_phonemes
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                id: singer_version
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            Label:
                size_hint_y: None
                height: 30
                id: singer_license
                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        Button:
            size_hint_y: None
            height: 30
            text: "import"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
            on_press: root.importVoicebank(self.parent.parent.filepaths[self.parent.parent.selectedIndex], self.parent.parent.voicebanks[self.parent.parent.selectedIndex].name)
        

