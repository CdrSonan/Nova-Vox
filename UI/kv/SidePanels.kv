            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        ColorWheel:
            id: settings_accColor
            size_hint_y: None
            height: 200
            on_color: self.parent.parent.applyColors()
        Label:
            size_hint_y: None
            height: 200
            valign: "middle"
            text: "Background Color:"
            background_normal: "UI/assets/Toolbar/Adaptive09.png"
            background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
        ColorWheel:
            id: settings_bgColor
            size_hint_y: None
            height: 200
            on_color: self.parent.parent.applyColors()
