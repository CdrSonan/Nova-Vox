#:kivy 2.0.0
#:import Factory kivy.factory.Factory
<NovaVoxUI>:
    FloatLayout:
        size: (root.width, root.height)
        canvas:
            Color:
                rgba: (0.137, 0.125, 0.173, 1)
            Rectangle:
                pos: (root.width - 65, 0)
                size:(65, root.height)
            Color:
                rgba: (0.322, 0.259, 0.463, 1)
            Rectangle:
                pos: (0, root.height - 60)
                size:(root.width, 60)
        ImageButton:
            pos: (4, root.height - 58)
            size_hint: (56 / root.width, 56 / root.height)
            imageNormal: "UI/assets/TopBar/logo.gif"
            imagePressed: "UI/assets/TopBar/logo.gif"
            on_press: Factory.LicensePanel().open()
        ImageButton:
            pos: (80, root.height - 45)
            size_hint: (42 / root.width, 30 / root.height)
            imageNormal: "UI/assets/TopBar/Top01.png"
            imagePressed: "UI/assets/TopBar/Top01_clicked.png"
        ImageToggleButton:
            pos: (138, root.height - 50)
            size_hint: (38 / root.width, 40 / root.height)
            imageNormal: "UI/assets/TopBar/Top02.png"
            imagePressed: "UI/assets/TopBar/Top02_clicked.png"
        ImageButton:
            pos: (190, root.height - 45)
            size_hint: (42 / root.width, 30 / root.height)
            imageNormal: "UI/assets/TopBar/Top03.png"
            imagePressed: "UI/assets/TopBar/Top03_clicked.png"
        ImageButton:
            pos: (250, root.height - 52)
            size_hint: (44 / root.width, 44 / root.height)
            imageNormal: "UI/assets/TopBar/Top04.png"
            imagePressed: "UI/assets/TopBar/Top04_clicked.png"
        ImageButton:
            pos: (310, root.height - 52)
            size_hint: (44 / root.width, 44 / root.height)
            imageNormal: "UI/assets/TopBar/Top05.png"
            imagePressed: "UI/assets/TopBar/Top05_clicked.png"
        ImageButton:
            pos: (root.width - 60, root.height - 120)
            size_hint: (55 / root.width, 55 / root.height)
            imageNormal: "UI/assets/SideBar/Side01.png"
            imagePressed: "UI/assets/SideBar/Side01_clicked.png"
            on_press: Factory.FileSidePanel().open()
        ImageButton:
            pos: (root.width - 60, root.height - 185)
            size_hint: (55 / root.width, 55 / root.height)
            imageNormal: "UI/assets/SideBar/Side02.png"
            imagePressed: "UI/assets/SideBar/Side02_clicked.png"
            on_press: Factory.SingerSidePanel().open()
        ImageButton:
            pos: (root.width - 60, root.height - 250)
            size_hint: (55 / root.width, 55 / root.height)
            imageNormal: "UI/assets/SideBar/Side03.png"
            imagePressed: "UI/assets/SideBar/Side03_clicked.png"
            on_press: Factory.ParamSidePanel().open()
        ImageButton:
            pos: (root.width - 60, root.height - 315)
            size_hint: (55 / root.width, 55 / root.height)
            imageNormal: "UI/assets/SideBar/Side04.png"
            imagePressed: "UI/assets/SideBar/Side04_clicked.png"
            on_press: Factory.ScriptingSidePanel().open()
        ImageButton:
            pos: (root.width - 60, root.height - 380)
            size_hint: (55 / root.width, 55 / root.height)
            imageNormal: "UI/assets/SideBar/Side05.png"
            imagePressed: "UI/assets/SideBar/Side05_clicked.png"
            on_press: Factory.SettingsSidePanel().open()
        ImageButton:
            pos: (root.width - 60, root.height - 445)
            size_hint: (55 / root.width, 55 / root.height)
            imageNormal: "UI/assets/SideBar/Side06.png"
            imagePressed: "UI/assets/SideBar/Side06_clicked.png"
        BoxLayout:
            orientation: "horizontal"
            pos: (0, 0)
            size_hint: (None, None)
            size: root.width - 65, root.height - 60
            Splitter:
                size_hint: (0.25, 1)
                sizable_from: "right"
                rescale_with_parent: True
                min_size: 100
                max_size: self.parent.width - 100
                strip_size: 5
                BoxLayout:
                    orientation: "vertical"
                    Splitter:
                        size_hint: (1, 0.75)
                        sizable_from: "bottom"
                        rescale_with_parent: True
                        max_size: self.parent.height - 100
                        strip_size: 5
                        Widget:
                            canvas:
                                Color:
                                    rgba: (0.137, 0.125, 0.173, 1)
                                Rectangle:
                                    pos: self.parent.pos
                                    size:(self.width, self.height)
                            ScrollView:
                                pos: self.parent.pos
                                #size_hint: (1, 1)
                                size:(self.parent.width, self.parent.height)
                                #size: (180, 400)
                                do_scroll: (False, True)
                                scroll_type: ["bars"]
                                bar_width: 10
                                BoxLayout:
                                    size_hint: (None, None)
                                    orientation: "vertical"
                                    width: self.parent.width - 12
                                    height: self.minimum_height
                                    SingerPanel:
                                    SingerPanel:
                                    SingerPanel:
                    Widget:
                        size_hint: (1, 0.25)
                        canvas:
                            Color:
                                rgba: (0.204, 0.204, 0.294, 1)
                            Rectangle:
                                pos: self.parent.pos
                                size:(self.width, self.height)
                        ScrollView:
                            pos: self.parent.pos
                            size:(self.parent.width, self.parent.height)
                            do_scroll: (False, True)
                            scroll_type: ["bars"]
                            bar_width: 10
                            BoxLayout:
                                size_hint: (None, None)
                                orientation: "vertical"
                                width: self.parent.width - 10
                                height: self.minimum_height
                                ParamPanel:
                                ParamPanel:
                                ParamPanel:
                                ParamPanel:
            BoxLayout:
                orientation: "vertical"
                size_hint: (0.75, 1)
                Splitter:
                    size_hint: (1, 0.75)
                    sizable_from: "bottom"
                    rescale_with_parent: True
                    max_size: self.parent.height - 100
                    strip_size: 5
                    FloatLayout:
                        Widget:
                            pos: self.parent.pos
                            size_hint: (1, None)
                            height: 40
                            canvas:
                                Color:
                                    rgba: (0.322, 0.259, 0.463, 1)
                                Rectangle:
                                    pos: self.parent.pos
                                    size:(self.width, 40)
                            BoxLayout:
                                pos: self.parent.pos
                                orientation: "horizontal"
                                padding: (2, 2)
                                ImageToggleButton:
                                    size_hint: (None, None)
                                    size: (40, 36)
                                    imageNormal: "UI/assets/Toolbar/Adaptive04.png"
                                    imagePressed: "UI/assets/Toolbar/Adaptive04_clicked.png"
                                    group: "DisplayModes"
                                ImageToggleButton:
                                    size_hint: (None, None)
                                    size: (40, 36)
                                    imageNormal: "UI/assets/Toolbar/Adaptive05.png"
                                    imagePressed: "UI/assets/Toolbar/Adaptive05_clicked.png"
                                    group: "DisplayModes"
                                ImageToggleButton:
                                    size_hint: (None, None)
                                    size: (40, 36)
                                    imageNormal: "UI/assets/Toolbar/Adaptive06.png"
                                    imagePressed: "UI/assets/Toolbar/Adaptive06_clicked.png"
                                    group: "DisplayModes"
                                AnchorLayout:
                                    anchor_x: "center"
                                    anchor_y: "center"
                                    size_hint: (None, None)
                                    size: (74, 36)
                                    ToggleButton:
                                        size_hint: (None, None)
                                        size: (70, 36)
                                        text: "draw"
                                        background_normal: "UI/assets/Toolbar/Adaptive08.png"
                                        background_down: "UI/assets/Toolbar/Adaptive07.png"
                                        group: "ToolButtons"
                                AnchorLayout:
                                    anchor_x: "center"
                                    anchor_y: "center"
                                    size_hint: (None, None)
                                    size: (74, 36)
                                    ToggleButton:
                                        size_hint: (None, None)
                                        size: (70, 36)
                                        text: "line"
                                        background_normal: "UI/assets/Toolbar/Adaptive08.png"
                                        background_down: "UI/assets/Toolbar/Adaptive07.png"
                                        group: "ToolButtons"
                                AnchorLayout:
                                    anchor_x: "center"
                                    anchor_y: "center"
                                    size_hint: (None, None)
                                    size: (74, 36)
                                    ToggleButton:
                                        size_hint: (None, None)
                                        size: (70, 36)
                                        text: "arch"
                                        background_normal: "UI/assets/Toolbar/Adaptive08.png"
                                        background_down: "UI/assets/Toolbar/Adaptive07.png"
                                        group: "ToolButtons"
                                AnchorLayout:
                                    anchor_x: "center"
                                    anchor_y: "center"
                                    size_hint: (None, None)
                                    size: (74, 36)
                                    ToggleButton:
                                        size_hint: (None, None)
                                        size: (70, 36)
                                        text: "reset"
                                        background_normal: "UI/assets/Toolbar/Adaptive08.png"
                                        background_down: "UI/assets/Toolbar/Adaptive07.png"
                                        group: "ToolButtons"
                            Spinner:
                                sync_height: True
                                background_normal: "UI/assets/Toolbar/Adaptive09.png"
                                background_down: "UI/assets/Toolbar/Adaptive09_clicked.png"
                                pos: (self.parent.x + self.parent.width - 122, self.parent.y + 2)
                                size_hint: (None, None)
                                size: (120, 36)
                                option_cls: Factory.get("BackdropOptn")
                                text: "backdrop"
                                values: ["param1", "param2", "param3", "param4", "param5"]
                        PianoRoll:
                            x: self.parent.x
                            y: self.parent.y + 40
                            size_hint: (1, None)
                            height: self.parent.height - 40
                Widget:
                    pos: self.parent.pos
                    size_hint: (1, 0.25)
                    canvas:
                        Color:
                            rgba: (0.184, 0.184, 0.267, 1)
                        Rectangle:
                            pos: self.pos
                            size:(self.width, self.height)
                    AdaptiveSpace:
                        pos: self.parent.pos
                        size:(self.parent.width, self.parent.height)

        #dark: 0.137 0.125 0.173
        #medium: 0.184 0.184 0.267
        #light: 0.204 0.204 0.294
        #toolbar: 0.322 0.259 0.463